            <option value="2030"> 2030</option>
        </select>
    </div>


    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>

</form>

     @section ExtraScripts{
    <script>
        $(document).ready(function () {
            $('#visibilityDays').hide();

            $("#daysButton").click(function () {
                $('#visibilityDays').show();

            });
        });

    </script>
     }