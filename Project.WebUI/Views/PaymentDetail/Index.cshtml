@{
    ViewData["Title"] = "Payments";
}
@model List<PaymentDetailDto>

<div class="text-center">
    <h1 class="display-4">Payment  Page</h1>
    <a class="btn btn-primary mr-2" asp-action="Create" asp-controller="PaymentDetail">New Payments</a>
    <a class="btn btn-warning" id="daysButton">Daily Payments</a>
</div>

