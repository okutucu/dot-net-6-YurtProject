@model List<RoomDto>
@{
	ViewData["Title"] = "Index";
}

<a asp-controller="Room" asp-action="Create"> New Room</a>
<table class="table table-striped">
	<thead>
	<tr>
		<td>RoomName</td>
		<td>Capacity</td>
		<td>Price</td>
		<td>Room State </td>
		<td>Room Type</td>
		<td>Dept</td>
		<td>Lack</td>
		<td>Lack Details</td>
		<td>Payment Status</td>
		<td>Action</td>
		
	</tr>
	</thead>
	<tbody>
		@foreach (RoomDto room in Model)
		{
		<tr>
				<th>@room.RoomName</th>
				<th>@room.Capacity</th>
				<th>@room.Price</th>
				<th>@room.CurrentCapacity</th>
				<th>@room.RoomType</th>
				<th>@room.Debt</th>
				<th>@room.Lack</th>
				<th>@room.LackDetail</th>
				<th>PAID</th>
				<th>
					<a class="btn btn-info" asp-controller="Room" asp-action="Detail" asp-route-id="@room.Id">Detail</a>
					
					<a class="btn btn-warning" asp-controller="Room" asp-action="Update" asp-route-id="@room.Id">Update	</a>
				<a class="btn btn-danger" asp-controller="Room" asp-action="Remove" asp-route-id="@room.Id">Delete	</a>	
				</th>
				
		</tr>
		}
	</tbody>
</table>