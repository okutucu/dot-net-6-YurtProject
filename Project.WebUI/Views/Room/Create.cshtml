@model RoomCreateDto

@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-between">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">Add Customer</li>
        </ol>
    </nav>
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Add Customer</li>
        </ol>
    </nav>
</div>

<div class="card">
    <h4 class="card-title ps-4">Add Room</h4>
    <div class="card-body">
        <div class="row g-5">
            <div class="col-lg-12 col-md-12">
                <form asp-action="Create" method="post" asp-controller="Room" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row g-3">
                        <div class="col-6">
                            <div class="form-group">
                                <label class="form-label">Room Name</label>
                                <input asp-for="RoomName" class="form-control" placeholder="Please Enter Room Name" />
                                <span asp-validation-for="RoomName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label class="form-label"> Capacity</label>
                                <input asp-for="Capacity" class="form-control" placeholder="Please Enter Room Capacity" />
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label class="form-label"> Room Type</label>
                                <select asp-for="RoomTypeId" asp-items="ViewBag.roomTypes" class="form-select"> </select>
                                <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6" style="margin-top:46px">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="checkId" asp-for="Lack" />
                                <label class="form-check-label" for="save-info">
                                    Room Lack
                                </label>
                            </div>
                              <div class="form-group">
                                <div class="d-none" id="lackDetailId">
                                    <label asp-for="LackDetail"></label>
                                    <input asp-for="LackDetail" class="form-control" />
                                </div>
                            </div>


                        </div>


                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
        </div>
        </form>
            </div>
        </div>
    </div>
</div>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


    @section ExtraScripts{
    <script>
        $(document).ready(function () {

            let lackDetail = $('#lackDetailId');

            $("#checkId").on('change', function () {
                if ($(this).is(':checked')) {
                    lackDetail.addClass('d-block').removeClass('d-none');
                } else {
                    lackDetail.addClass('d-none').removeClass('d-block');
                }
            });
        });
    </script>
}

