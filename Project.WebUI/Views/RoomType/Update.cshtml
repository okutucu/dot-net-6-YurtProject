@model Project.Core.DTOs.RoomTypeDto

@{
    ViewData["Title"] = "Create";
}


<div class="d-flex justify-content-between">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">You can update the room type named  @Model.RoomName from this page.</li>
        </ol>
    </nav>
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Update Room Type</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="row">
        <div class="col-md-12">
            <h4 class="card-title ">Update Room Type</h4>
        </div>
    </div>
    <div class="card-body">
        <div class="row g-5">
            <div class="col-lg-12 col-md-12">
                <form asp-action="Update" method="post" asp-controller="RoomType" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input  asp-for="Id" type="hidden" />
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="form-group">
                                <label class="form-label">Room Type Name</label>
                                <input asp-for="RoomName" class="form-control" placeholder="Please Enter Room Type Name" />
                                <span asp-validation-for="RoomName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label class="form-label"> Price</label>
                                <input type="number" asp-for="Price" class="form-control" placeholder="Please Enter Room Price" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label class="form-label"> Increased Price</label>
                                <input type="number" asp-for="IncreasedPrice" class="form-control" placeholder="Please Enter Room Increased Price" />
                                <span asp-validation-for="IncreasedPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit"><i class="material-icons f-left material-css">thumb_up</i>  Submit </button>
                            <a asp-action="Index" class="btn btn-danger">
                                <i class="material-icons f-left material-css">backspace</i>
                                Back To List
                            </a>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
