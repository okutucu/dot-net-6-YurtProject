@model List<RoomIncomeWithRoomDto>

@{
	ViewData["Title"] = "Get By Selected";
	string color = "";
}

@if (Model.Count == 0)
{
	<div class="alert alert-info" role="alert">
		No data found for the date you entered !  <br>
		<a asp-action="Index" class="alert-link">Click</a>  to go back.
	</div>
}
else
{
	<h1>@ViewBag.date </h1>

	<h3>Room Rent Incomes</h3>
	
	<div class="row mt-5">
		@foreach (var item in ViewBag.allPaymentsDatas)
		{
			switch (item.Exchange.ToString())
			{
				case "Tl":
					color = "red";
					break;

				case "Dollar":
					color = "purple";
					break;

				case "Euro":
					color = "blue";
					break;

				case "Sterling":
					color = "yellow";
					break;
			}

			<ul style="background-color:@color">
				<li>Exchange = @item.Exchange</li>
				<li>Total Price = @item.Sum</li>
			</ul>

		}
	</div>

	<table class="table table-striped">
		<thead>
			<tr>
				<td>Room Name</td>
				<td>Customer Name</td>
				<td>Payment Method</td>
				<td>Price</td>
				<td>Currency Name </td>
				<td>Money Of The Day</td>
				<td>Description</td>
				<td>Payment Date</td>
				<td>Action</td>

			</tr>
		</thead>
		<tbody>
			@foreach (RoomIncomeWithRoomDto incomeDetail in Model)
			{
				<tr>
					<th>@incomeDetail.Room.RoomName</th>
					<th>@incomeDetail.CustomerName</th>
					<th>@incomeDetail.PaymentMethod</th>
					<th>@incomeDetail.Price</th>
					<th>@incomeDetail.Exchange</th>
					<th>@incomeDetail.MoneyOfTheDay</th>
					<th>@incomeDetail.Description</th>
					<th>@incomeDetail.PaymentDate</th>
					<th>
						<a class="btn btn-warning" asp-controller="RoomIncome" asp-action="Update" asp-route-id="@incomeDetail.Id">Update	</a>
						<a class="btn btn-danger" asp-controller="RoomIncome" asp-action="Remove" asp-route-id="@incomeDetail.Id">Delete	</a>
					</th>
				</tr>
			}
		</tbody>
	</table>
}


