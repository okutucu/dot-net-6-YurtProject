@using System.Globalization
@model List<RoomIncomeWithRoomDto>

@{
    ViewData["Title"] = "GetBySelected";
}

@if(Model.Count ==0)
{

	<div class="alert alert-info" role="alert">
		No data found for the date you entered !  <br>
		<a asp-action="Index" class="alert-link">Click</a>  to go back.
	</div>
}
else
{
	
	DateTime date = Model[0].PaymentDate;
	string fullMonthName = date.ToString("MMMM", CultureInfo.CreateSpecificCulture("en"));
	string year = date.Year.ToString();


	<h1>@fullMonthName @year </h1>

	<h3>Selected Room Income </h3>


	<table class="table table-striped">
		<thead>
			<tr>
				<td>Room Name</td>
				<td>Payment Method</td>
				<td>Price</td>
				<td>Currency Name </td>
				<td>MoneyOfTheDay</td>
				<td>Description</td>
				<td>PaymentDate</td>
				<td>Action</td>

			</tr>
		</thead>
		<tbody>
			@foreach (RoomIncomeWithRoomDto roomDetail in Model)
			{
				<tr>
					<th>@roomDetail.Room.RoomName</th>
					<th>@roomDetail.PaymentMethod</th>
					<th>@roomDetail.Price</th>
					<th>@roomDetail.Exchange</th>
					<th>@roomDetail.MoneyOfTheDay</th>
					<th>@roomDetail.Description</th>
					<th>@roomDetail.PaymentDate</th>

					<th>

						<a class="btn btn-warning" asp-controller="RoomIncome" asp-action="Update" asp-route-id="@roomDetail.Id">Update	</a>
						<a class="btn btn-danger" asp-controller="RoomIncome" asp-action="Remove" asp-route-id="@roomDetail.Id">Delete	</a>
					</th>

				</tr>
			}
		</tbody>
	</table>
}
