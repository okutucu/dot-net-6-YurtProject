@model List<RoomIncomeWithRoomDto>

@{
	ViewData["Title"] = "Get By Selected";
	string color = "";
}

@if (Model.Count == 0)
{
	<div class="alert alert-info" role="alert">
		No data found for the date you entered !  <br>
		<a asp-action="Index" class="alert-link">Click</a>  to go back.
	</div>
}
else
{
	<h1 id="dateId">@ViewBag.date </h1>

		<div class="row">
		<h3>All Rent Income  Exchange Chart</h3>
		<div class="col-6" style="background:white">
			<h3 class="my-2">
				Currency & Price Chart
			</h3>
			<div id="allDataWithExchange"></div>

		</div>
		<div class="col-6" style="background:white">
			<h3 class="my-2">
				All Rent Income Payment Method & Price Chart
			</h3>
			<div id="allDataWithPaymentMethod"></div>

		</div>
	</div>

	
	<div class="row mt-5">
		@foreach (var item in ViewBag.allPaymentsDatas)
		{
			switch (item.Exchange.ToString())
			{
				case "Tl":
					color = "red";
					break;

				case "Dollar":
					color = "purple";
					break;

				case "Euro":
					color = "blue";
					break;

				case "Sterling":
					color = "yellow";
					break;
			}

			<ul style="background-color:@color">
				<li>Exchange = @item.Exchange</li>
				<li>Total Price = @item.Sum</li>
			</ul>

		}
	</div>

	<table class="table table-striped">
		<thead>
			<tr>
				<td>Room Name</td>
				<td>Customer Name</td>
				<td>Payment Method</td>
				<td>Price</td>
				<td>Currency Name </td>
				<td>Money Of The Day</td>
				<td>Description</td>
				<td>Payment Date</td>
				<td>Action</td>

			</tr>
		</thead>
		<tbody>
			@foreach (RoomIncomeWithRoomDto incomeDetail in Model)
			{
				<tr>
					<th>@incomeDetail.Room.RoomName</th>
					<th>@incomeDetail.CustomerName</th>
					<th>@incomeDetail.PaymentMethod</th>
					<th>@incomeDetail.Price</th>
					<th>@incomeDetail.Exchange</th>
					<th>@incomeDetail.MoneyOfTheDay</th>
					<th>@incomeDetail.Description</th>
					<th>@incomeDetail.PaymentDate</th>
					<th>
						<a class="btn btn-warning" asp-controller="RoomIncome" asp-action="Update" asp-route-id="@incomeDetail.Id">Update	</a>
						<a class="btn btn-danger" asp-controller="RoomIncome" asp-action="Remove" asp-route-id="@incomeDetail.Id">Delete	</a>
					</th>
				</tr>
			}
		</tbody>
	</table>


		<div id="serviceUrl" aria-hidden="true" data-url="@ViewBag.url"></div>

	
@section ExtraScripts {
	<script type="text/javascript" src="https://www.google.com/jsapi"></script>
	<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
	  <script src="~/js/payments.js"></script>
    }
}


